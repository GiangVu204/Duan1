<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_giohang_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_giohang_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Tên sản phẩm"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="15000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_weight="5"
                    android:textStyle="bold"
                    android:textColor="#FF2424"/>

                <ImageView
                    android:id="@+id/item_giohang_tru"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/baseline_remove_24"/>
                
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/item_giohang_cong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/baseline_add_24"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/baseline_drag_handle_24"/>
                
                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="30000 đ"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#FF2424"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/ImgDeleteGH"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/img_delete"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>